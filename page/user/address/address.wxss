
.addr-list {
  margin: 0;
  padding: 0;
}

.addr-list .addr-item {
  height: 160rpx;
  padding: 15rpx 20rpx;
  padding-left: 50rpx;
  background: #FEFFFF;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
  overflow: hidden;
}

.addr-item .left-info {
  float: left;
  height: 180rpx;
  width: 500rpx;
}
.default-addr-badge {
  display: inline-block;
  margin-top: -7rpx;
  margin-left: 15rpx;
}

.addr-item .right-btn {
  float: right;
  width: 100rpx;
  height: 180rpx;
  position: absolute;
  top: 50rpx;
  right: 10rpx;
}

.right-btn text {
  color: #9F9F9F;
  font-size: 1.6em;
}

.addr-item .item-head {
  color: #292929;
  font-size: 35rpx;
  font-weight: blod;
}

.addr-item .item-body {
  margin: 5rpx 0;
  font-size: 28rpx;
  color: #4A4A4A;
}

.addr-item .item-footer {
  font-size: 28rpx;
  color: #929292;
}

.add-new {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60rpx;
  background: #338AFE;
  text-align: center;
  color: white;
  font-size: 33rpx;
  padding: 20rpx 0;
}
.add-new-ipx {
  height: 80rpx;
}

.empty-list-tip {
  width: 100%;
  text-align: center;
  margin: 120rpx auto;
  color: #6D6D6D;
  font-size: 30rpx;
}
